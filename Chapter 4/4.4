#include <iostream>

class Money {
private:
    double amount;

public:
    Money(double amount) : amount(amount) {}

    // Перегрузка оператора -
    Money operator-(const Money &other) const {
        if (this->amount < other.amount) {
            std::cerr << "Error: Insufficient funds!" << std::endl;
            return *this;
        }
        return Money(this->amount - other.amount);
    }

    void display() const {
        std::cout << "Amount: $" << amount << std::endl;
    }
};

int main() {
    Money m1(100.0);
    Money m2(50.0);

    Money m3 = m1 - m2;
    m3.display();

    Money m4 = m1 - Money(120.0);  // Ошибка, так как недостаточно средств
    m4.display();

    return 0;
}
