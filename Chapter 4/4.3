#include <iostream>

class Point {
private:
    double x, y, z;

public:
    Point(double x, double y, double z) : x(x), y(y), z(z) {}

    // Перегрузка оператора <<
    friend std::ostream& operator<<(std::ostream &out, const Point &point) {
        out << "Point(" << point.x << ", " << point.y << ", " << point.z << ")";
        return out;
    }
};

int main() {
    Point p(1.5, 2.3, -4.7);
    std::cout << p << std::endl;
    return 0;
}
